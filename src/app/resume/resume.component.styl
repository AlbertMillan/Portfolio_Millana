.statusbar
    color #000000
    min-height: 21px
    padding-top: 5px
    padding-bottom: 5px
    display: block
    box-shadow: inset 0 1px #f1f1f1;
    background: linear-gradient(#e4e4e4,#b8b7b8);
    border-radius: 4px 4px 0 0;
    height: 0.8em

.container
    padding-right: 15px
    padding-left: 15px
    margin-right: auto
    margin-left: auto
    @media (min-width: 576px)
        width: 540px
        max-width: 540px
    @media (min-width: 770px)
        width: 750px
        max-width: 720px
    @media (min-width: 992px)
        width: 970px
        max-width: 960px
    @media (min-width: 1200px)
        width: 1170px
        max-width: 1140px

.content
    margin: 0 auto
    overflow hidden
    background: hsla(0,0%,5%,.75);
    box-shadow: 0 3px 6px rgba(0,0,0,.16), 0 3px 6px rgba(0,0,0,.23);
    border-radius: 0 0 5px 5px

.header-container
    font-size: 13px
    line-height: 1.75
    color: #f1f1f1
    h2
        margin: 10px 0px
    hr
        margin: 10px 0px

.resume-container
    padding: 15px 0px
    font-size: 16px
    line-height: 1.75
    color: #f1f1f1

.resume
    max-width: 90px
    width: 33.33333%
    margin-right: 0.5em

.text-container
    text-align: center
    border-radius: 5px
    background-color: #6c3b7b

#profile-image
    max-width: 100%
    //max-height: 250px
    border-radius: 15px
    filter: grayscale(100%)
    box-shadow: 3px 3px 15px #000;
    background: #6c3b7b
    //margin-right: 10px