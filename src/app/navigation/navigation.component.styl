#nav
    z-index 100
    position: fixed
    color: #f0ecf2
    background-color: #6c3b7b
    width: 100%
    height: 2em
    transition: all .3s ease;

.container
    padding-right: 15px
    padding-left: 15px
    margin-right: auto
    margin-left: auto
    //text-align: center
    height: 100%
    @media (min-width: 576px)
        max-width: 540px
    @media (min-width: 770px)
        width: 750px
        max-width: 720px
    @media (min-width: 992px)
        width: 970px
        max-width: 960px
    @media (min-width: 1200px)
        width: 1170px
        max-width: 1140px

.horizontal-info
    display: flex
    align-items: center
    height: 100%
    ul, li, p
        //height 100%
        //text-align: center
    li
        display: inline-block
        padding-right: 1.0em
    ul
        margin: 0 auto


.pull-left
    float: left!important

.pull-right
    float: right!important